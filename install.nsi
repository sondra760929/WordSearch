  Delete "$INSTDIR\SumatraPDF-settings.txt"
  Delete "$INSTDIR\xlnt.dll"
  Delete "$INSTDIR\cpdf.exe"
  Delete "$INSTDIR\PDFIndexExplorer.exe"

  Delete "$SMPROGRAMS\PDF Index Explorer\Uninstall.lnk"
  Delete "$SMPROGRAMS\PDF Index Explorer\Website.lnk"
  Delete "$DESKTOP\PDF Index Explorer.lnk"
  Delete "$SMPROGRAMS\PDF Index Explorer\PDF Index Explorer.lnk"

  RMDir "$SMPROGRAMS\PDF Index Explorer"
  RMDir "$INSTDIR"

  DeleteRegKey ${PRODUCT_UNINST_ROOT_KEY} "${PRODUCT_UNINST_KEY}"
  DeleteRegKey HKLM "${PRODUCT_DIR_REGKEY}"
  SetAutoClose true
SectionEnd