## Displays the serial dialog
Function SerialPageShow

 !insertmacro MUI_HEADER_TEXT "Enter Serial Code" "Enter the software serial code to continue."

 PassDialog::Dialog Serial            \
                    /HEADINGTEXT 'Please enter the serial code located on the software CD case...' \
                    /CENTER             \
                    /BOXDASH 12  70 4 '' \
                    /BOXDASH 92  70 4 ''  \
                    /BOXDASH 172 70 4 ''   \
                    /BOXDASH 252 70 4 ''    \
                    /BOX     332 70 4 ''

  Pop $R0 # success, back, cancel or error

FunctionEnd

## Validate serial numbers
Function SerialPageLeave

 ## Pop values from stack
 Pop $R0
 Pop $R1
 Pop $R2
 Pop $R3
 Pop $R4

 ## A bit of validation
 StrCmp $R0 'docu' +3
  MessageBox MB_OK|MB_ICONEXCLAMATION "Entered serial key is not valid!"
  Abort
  
 StrCmp $R1 '0000' +13
 StrCmp $R1 '6203' +12
 StrCmp $R1 '6738' +11
 StrCmp $R1 '0123' +10
 StrCmp $R1 '4653' +9
 StrCmp $R1 '8975' +8
 StrCmp $R1 '7527' +7
 StrCmp $R1 '3169' +6
 StrCmp $R1 '4768' +5
 StrCmp $R1 '9563' +4
 StrCmp $R1 '0031' +3
  MessageBox MB_OK|MB_ICONEXCLAMATION "Entered serial key is not valid!"
  Abort

 StrCmp $R2 '1111' +13
 StrCmp $R2 '9985' +12
 StrCmp $R2 '0201' +11
 StrCmp $R2 '2214' +10
 StrCmp $R2 '9065' +9
 StrCmp $R2 '6574' +8
 StrCmp $R2 '8418' +7
 StrCmp $R2 '9095' +6
 StrCmp $R2 '7940' +5
 StrCmp $R2 '0586' +4
 StrCmp $R2 '7942' +3
  MessageBox MB_OK|MB_ICONEXCLAMATION "Entered serial key is not valid!"
  Abort

 StrCmp $R3 '2222' +13
 StrCmp $R3 '2879' +12
 StrCmp $R3 '0543' +11
 StrCmp $R3 '8553' +10
 StrCmp $R3 '7585' +9
 StrCmp $R3 '0461' +8
 StrCmp $R3 '5189' +7
 StrCmp $R3 '9082' +6
 StrCmp $R3 '3193' +5
 StrCmp $R3 '6170' +4
 StrCmp $R3 '2606' +3
  MessageBox MB_OK|MB_ICONEXCLAMATION "Entered serial key is not valid!"
  Abort

 StrCmp $R4 '3333' +13
 StrCmp $R4 '1915' +12
 StrCmp $R4 '1335' +11
 StrCmp $R4 '0665' +10
 StrCmp $R4 '7378' +9
 StrCmp $R4 '7218' +8
 StrCmp $R4 '0450' +7
 StrCmp $R4 '5595' +6
 StrCmp $R4 '0775' +5
 StrCmp $R4 '9694' +4
 StrCmp $R4 '1639' +3
  MessageBox MB_OK|MB_ICONEXCLAMATION "Entered serial key is not valid!"
  Abort

 ## Display the values
 MessageBox MB_OK|MB_ICONINFORMATION "You inputted: $R0, $R1, $R2, $R3, $R4"

FunctionEnd

Function ComponentsPageShow

 ## Disable the Back button
